{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard"
  ],
  "pre-commit": {
    "enabled": true,
    "fileMatch": [
      "(^|/)\\.pre-commit-config\\.ya?ml$"
    ],
    "prBodyNotes": [""],
    "additionalBranchPrefix": "pre-commit/",
    "commitMessagePrefix": "‚¨Ü",
    "commitMessageAction": "Bump",
    "commitMessageTopic": "pre-commit hook {{depName}}",
    "commitMessageExtra": "from {{#if isPinDigest}}{{{currentDigestShort}}}{{else}}{{#if isMajor}}{{currentVersion}}{{else}}{{#if isSingleVersion}}{{currentVersion}}{{else}}{{#if currentValue}}{{{currentValue}}}{{else}}{{{currentDigestShort}}}{{/if}}{{/if}}{{/if}}{{/if}} to {{#if isPinDigest}}{{{newDigestShort}}}{{else}}{{#if isMajor}}{{prettyNewMajor}}{{else}}{{#if isSingleVersion}}{{prettyNewVersion}}{{else}}{{#if newValue}}{{{newValue}}}{{else}}{{{newDigestShort}}}{{/if}}{{/if}}{{/if}}{{/if}}"
  },
  "enabledManagers": [
    "dockerfile",
    "pip_requirements",
    "poetry",
    "pre-commit"
  ],
  "ignorePaths": [
    ".devcontainer/*"
  ],
  "additionalBranchPrefix": "{{datasource}}/{{manager}}/",
  "packageRules": [
    {
      "matchDatasources": [ "pypi" ],
      "labels": [ "dependencies", "pip" ],
      "additionalBranchPrefix": "python/",
      "commitMessagePrefix": "‚¨Ü üêç",
      "commitMessageAction": "Bump",
      "commitMessageTopic": "{{depName}}",
      "commitMessageExtra": "from {{#if isPinDigest}}{{{currentDigestShort}}}{{else}}{{#if isMajor}}v{{currentVersion}}{{else}}{{#if isSingleVersion}}v{{currentVersion}}{{else}}{{#if currentValue}}{{{currentValue}}}{{else}}{{{currentDigestShort}}}{{/if}}{{/if}}{{/if}}{{/if}} to {{#if isPinDigest}}{{{newDigestShort}}}{{else}}{{#if isMajor}}{{prettyNewMajor}}{{else}}{{#if isSingleVersion}}{{prettyNewVersion}}{{else}}{{#if newValue}}{{{newValue}}}{{else}}{{{newDigestShort}}}{{/if}}{{/if}}{{/if}}{{/if}}",
      "rangeStrategy": "bump"
    },
    {
      "matchDatasources": [ "docker" ],
      "labels": [ "dependencies", "docker" ],
      "additionalBranchPrefix": "docker/",
      "commitMessagePrefix": "‚¨Ü üêã",
      "commitMessageAction": "Bump",
      "commitMessageTopic": "{{depName}}"
    },
    {
      "matchDatasources": [ "docker", "github-releases" ],
      "matchDepNames": [ "python" ],
      "separateMinorPatch": true
    },
    {
      "matchDatasources": [ "docker", "github-releases" ],
      "matchDepNames": [ "python" ],
      "matchUpdateTypes": [ "major", "minor" ],
      "enabled": false
    },
    {
      "matchDatasources": [ "pypi" ],
      "matchDepNames": [ "pytz" ],
      "versioning": "pep440"
    }
  ]
}
